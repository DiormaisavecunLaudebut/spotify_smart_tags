<div class='container'>
  <%= form_with(url: '/filter/tracks', method: 'get', local: false, class: 'd-flex align-items-center flex-column') do %>
    <%= text_field_tag('q', nil, id: "input-filter", placeholder: 'Search tags', class: "d-none") %>
    <div class="mt-3">
      <% current_user.sptags.map(&:name).each do |tag_name| %>
        <span class="badge badge-filter badge-pill badge-light"><%= tag_name %></span>
      <% end %>
    </div>
    <%= submit_tag("Apply", class: 'btn-submit-filter', id: 'btn-submit-filter') %>
  <% end %>
</div>

<div class="trackland-playlist-container">
  <% @trackland_playlists.each do |playlist| %>
    <div>

    </div>
  <% end %>
</div>

<%= render 'shared/create-playlist-modal' %>

<div data-list-tags="<%= @user_tags %>" id="hidden-list-tag" class="d-none"></div>
