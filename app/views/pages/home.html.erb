<div id="open-create-playlist" class="primary-btn btn-fixed d-none" style="z-index:1;">Create Playlist</div>
<div class='container mt-3'>
  <h1 class="big-title text-white">What do you want to listen ?</h1>
  <%= form_with(url: '/filter/tracks', method: 'get', local: false, class: 'd-flex align-items-center flex-column') do %>
    <%= hidden_field_tag(:tracks, nil, id: 'hidden-input-tags', name: "filter-tags") %>
    <div class="mt-2 badge-container">
      <% current_user.sptags.map(&:name).sample(6).each do |tag_name| %>
          <div class="mtag tag-inactive"><%= tag_name %></div>
      <% end %>
    </div>

    <%= render 'shared/searchbar' %>

    <%= submit_tag("Find tracks", class: 'btn-submit-filter mt-3 secondary-btn', id: 'btn-submit-filter') %>

  <% end %>
</div>

<div data-list-tags="<%= @user_tags %>" id="hidden-list-tag" class="d-none"></div>
<%= render 'shared/create-playlist-modal' %>
